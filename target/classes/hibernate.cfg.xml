<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">Amit9086!</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/books_store</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
      
        <property name="hibernate.hbm2ddl.auto">create</property>
        <mapping class="com.example.BookStoreManagement.Book"/>
        <mapping class="com.example.BookStoreManagement.Category"/>
        <mapping class="com.example.BookStoreManagement.Customer"/>
		<mapping class="com.example.BookStoreManagement.OrderItem"/>        
        <mapping class="com.example.BookStoreManagement.Orders"/>
        <mapping class="com.example.BookStoreManagement.Publisher"/>
    </session-factory>
</hibernate-configuration>
